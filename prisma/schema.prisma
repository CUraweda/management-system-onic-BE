// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model m_user {
  u_id            String    @id @default(cuid())
  u_name          String
  u_code          String?
  u_email         String    @unique
  u_password      String?
  title           String?
  u_token         String?
  u_phone         Int?
  u_gender        String?
  u_date_of_birth DateTime?
  u_address       String?
  u_province_id   String?
  u_city_id       String?
  created_at      DateTime? @default(now())
  updated_at      DateTime? @updatedAt
}

model task {
  id              String    @id @default(cuid())
  task_type       String?
  task_title      String?
  priority        String?
  iteration       String?
  start_date      DateTime?
  due_date        DateTime?
  description     String?
  pic             String?
  spv             String?
  status          String? @default("Wait-app")
  progress        Int?
  file_attachment String?
}
